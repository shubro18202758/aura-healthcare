# AURA Healthcare Framework - Environment Configuration

# =================================================================
# DATABASE CONFIGURATION
# =================================================================
MONGO_URL=mongodb://localhost:27017
DATABASE_NAME=aura_healthcare
REDIS_URL=redis://localhost:6379

# =================================================================
# VECTOR DATABASE (Qdrant)
# =================================================================
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_COLLECTION=medical_knowledge

# =================================================================
# AI MODELS CONFIGURATION
# =================================================================
# OpenAI (for production-grade responses)
OPENAI_API_KEY=your_openai_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# HuggingFace (for embeddings and NLP)
HUGGINGFACE_API_KEY=your_hf_key_here
EMBEDDING_MODEL=microsoft/BiomedNLP-BiomedBERT-base-uncased-abstract

# Local Models (optional for offline operation)
LOCAL_MODEL_PATH=./models/biomedical-llm
USE_LOCAL_MODEL=false

# =================================================================
# SECURITY & AUTHENTICATION
# =================================================================
SECRET_KEY=your-secret-key-change-this-in-production-32-chars-minimum
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =================================================================
# APPLICATION SETTINGS
# =================================================================
DEBUG=true
APP_NAME=AURA Healthcare
APP_VERSION=1.0.0
API_PREFIX=/api
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_CREDENTIALS=true
CORS_METHODS=*
CORS_HEADERS=*

# =================================================================
# FILE UPLOAD CONFIGURATION
# =================================================================
UPLOAD_DIR=./data/uploads
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=pdf,docx,txt,png,jpg,jpeg

# =================================================================
# MEDICAL NLP SETTINGS
# =================================================================
SPACY_MODEL=en_core_web_sm
MEDICAL_ENTITIES=DISEASE,SYMPTOM,MEDICATION,TREATMENT,ANATOMY
SENTIMENT_THRESHOLD=0.7

# =================================================================
# RAG ENGINE SETTINGS
# =================================================================
CHUNK_SIZE=500
CHUNK_OVERLAP=50
TOP_K_RESULTS=5
SIMILARITY_THRESHOLD=0.75
CONTEXT_WINDOW=4096

# =================================================================
# CONVERSATION SETTINGS
# =================================================================
MAX_CONVERSATION_HISTORY=20
CONVERSATION_TIMEOUT=1800
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,hi,bn,ta,te,mr,gu,kn,ml,pa,or,as

# =================================================================
# DOCTOR DASHBOARD SETTINGS
# =================================================================
SPECIALTY_TEMPLATES=cardiology,neurology,pediatrics,orthopedics,general
REPORT_FORMAT=pdf
AUTO_GENERATE_SUMMARY=true

# =================================================================
# PERFORMANCE & CACHING
# =================================================================
REDIS_CACHE_TTL=3600
ENABLE_RESPONSE_CACHE=true
MAX_CONCURRENT_CONVERSATIONS=100

# =================================================================
# MONITORING & LOGGING
# =================================================================
ENABLE_LOGGING=true
LOG_FILE=./logs/aura.log
LOG_ROTATION=daily
SENTRY_DSN=

# =================================================================
# WEBSOCKET SETTINGS
# =================================================================
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=1000

# =================================================================
# DEMO & TESTING
# =================================================================
DEMO_MODE=true
MOCK_AI_RESPONSES=false
POPULATE_SAMPLE_DATA=true
